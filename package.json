{
    "name": "@moneteam/eslint-plugin-nestjs",
    "version": "1.0.2",
    "description": "Eslint rules for nestjs projects",
    "scripts": {
        "clean": "rm -Rf ./dist/",
        "build:ci": "npm run build",
        "build": "npm run clean && mkdir ./dist && tsc --project tsconfig.build.json",
        "lint": "npx eslint -c .eslintrc.js --ext .ts './src/**/*.ts' './tests/**/*.ts' --no-error-on-unmatched-pattern",
        "test": "export NODE_OPTIONS=\"--max-old-space-size=8192\" && npx jest --runInBand --color --reporters=default --no-cache --coverage=false --silent=false",
        "pre-commit": "npx lint-staged",
        "prettier": "prettier --write src/*",
        "prepare": "husky install",
        "release": "npx semantic-release",
        "semantic-release": "semantic-release"
    },
    "publishConfig": {
        "access": "public"
    },
    "release": {
        "branches": [
            "main"
        ]
    },
    "homepage": "https://github.com/NarHakobyan/eslint-plugin-nestjs",
    "repository": {
        "type": "git",
        "url": "https://github.com/NarHakobyan/eslint-plugin-nestjs"
    },
    "engines": {
        "node": ">=12"
    },
    "files": [
        "dist",
        "package.json",
        "README.md"
    ],
    "main": "dist/index.js",
    "types": "index.d.ts",
    "dependencies": {
        "@typescript-eslint/experimental-utils": "^5.15.0",
        "@typescript-eslint/scope-manager": "^5.15.0",
        "eslint-module-utils": "^2.7.3",
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@commitlint/cli": "16.2.3",
        "@commitlint/config-conventional": "16.2.1",
        "@semantic-release/changelog": "6.0.1",
        "@semantic-release/exec": "6.0.3",
        "@types/eslint": "8.4.1",
        "@types/jest": "27.4.1",
        "@types/node": "17.0.21",
        "@typescript-eslint/eslint-plugin": "5.15.0",
        "@typescript-eslint/parser": "5.15.0",
        "class-validator": "^0.13.2",
        "eslint": "^8.11.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-import-helpers": "^1.2.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-sonarjs": "^0.12.0",
        "eslint-plugin-unicorn": "^41.0.1",
        "husky": "7.0.4",
        "jest": "27.5.1",
        "jest-create-mock-instance": "2.0.0",
        "jest-junit": "13.0.0",
        "lint-staged": "12.3.7",
        "prettier": "2.6.0",
        "semantic-release": "19.0.2",
        "ts-jest": "27.1.3",
        "typescript": "4.6.2"
    },
    "peerDependencies": {
        "@typescript-eslint/parser": "^5.0.0",
        "class-validator": "*",
        "eslint": "^8.0.0"
    },
    "keywords": [
        "eslint",
        "eslintplugin",
        "eslint-plugin",
        "nestjs",
        "linter",
        "lint",
        "style"
    ],
    "license": "ISC",
    "lint-staged": {
        "*.ts": "eslint --cache --fix",
        "*.{ts,js,css,md}": "prettier --write"
    }
}
